{
  "name": "openapi-mocks-monorepo",
  "private": true,
  "packageManager": "pnpm@10.26.1",
  "scripts": {
    "build": "pnpm -r build",
    "test": "pnpm -r test",
    "typecheck": "tsc --noEmit",
    "release": "semantic-release",
    "lib:build": "pnpm --filter openapi-mocks build",
    "lib:test": "pnpm --filter openapi-mocks test",
    "lib:typecheck": "pnpm --filter openapi-mocks typecheck",
    "docs:dev": "pnpm --filter openapi-mocks-docs dev",
    "docs:build": "pnpm --filter openapi-mocks-docs build",
    "docs:preview": "pnpm --filter openapi-mocks-docs preview",
    "docs:typecheck": "pnpm --filter openapi-mocks-docs typecheck"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^12.0.6",
    "@semantic-release/npm": "^13.1.4",
    "@semantic-release/release-notes-generator": "^14.1.0",
    "@types/node": "^25.2.3",
    "semantic-release": "^25.0.3",
    "typescript": "^5.7.3"
  }
}
